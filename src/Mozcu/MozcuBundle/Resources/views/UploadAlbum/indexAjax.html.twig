<script type="text/javascript">
    $(function(){
        $('#uploadAlbumImage').change(function(){
            var me = $(this);
            var loader = me.parents('.uploadFront').find('.loader');
            
            me.parents('.text').hide();
            loader.show();
            $.mozcuFileUpload({
                inputId: me.attr('id'),
                actionUrl: $('#uploadImageUrl').val(),
                success: function(data) {
                    if(data.success) {
                        var img = me.parents('.uploadFront').find('.preview');
                        var deleteImg = me.parents('.uploadFront').find('.deleteImage');
                        img.attr('src', "/uploads/images/tmp/" + data.file_name);
                        $("#imageFileName").val(data.file_name);
                        
                        loader.hide();
                        img.show();
                        deleteImg.show();
                        
                        if($('#imageUrl').length > 0) {
                            $('#imageUrl').remove();
                        }
                    }
                }
            });
        });
        
        $('.uploadBox .deleteImage').click(function(e) {
            var me = $(this);
            
            var img = me.parent().find('.preview');
            var text = me.parent().find('.text');
            $('#uploadAlbumImage').val('');
            $("#imageFileName").val("");
            me.hide();
            img.hide();
            text.show();
        });
        
        $('.licenses .license a').click(function(e){
            e.preventDefault();
            var me = $(this);
            
            me.parents('.licenses').find('.selected').removeClass('selected');
            me.addClass('selected');
            $('#license').val(me.attr('id'));
        });
        
        // for edit
        if($('#imageUrl').length > 0) {
            var container = $('.uploadFront');
            container.find('.text').hide();
            container.find('.preview').attr('src', $('#imageUrl').val()).show();
            container.find('.deleteImage').show();
        }
    });
</script>