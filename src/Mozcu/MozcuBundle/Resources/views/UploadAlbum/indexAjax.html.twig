<script type="text/javascript">
    $(function() {
        var uploadifyTemplate;
    
        if($('#uploadify_template_url').length > 0) {
            $.ajaxSetup({async: false});
            var url = $('#uploadify_template_url').val();
            $.getJSON(url, function(data) {
                if(data.success) {
                    uploadifyTemplate = data.html;
                }
            });
            $.ajaxSetup({async: true});
        }
        
        $('#add_tracks').uploadify({
            swf             : $('#uploadify_swf').val(),
            uploader        : $('#upload_url').val(),
            buttonText      : '+ Agregar tracks',
            buttonClass     : 'btnUpload btn btn-default btn-lg center-block',
            multi           : true,
            auto            : true,
            removeCompleted : false,
            fileSizeLimit   : '0',
            fileTypeExts    : '*.mp3',
            itemTemplate    : uploadifyTemplate,
            queueID         : 'add_tracks-queue',
            width           : 200,
            onUploadSuccess : function(file, data, response) {
                var data = $.parseJSON(data);    
                if(data.success) {
                    $('#' + file.id).find('.realFileName').val(data.file_name);
                    $('#' + file.id).find('.editSongName').html(data.original_name);
                } else {
                    $('#' + file.id).addClass('uploadify-error');
                    $('#' + file.id).find('.data').html('ERROR');
                    console.log(data.message);
                }
            },
            onInit : function(instance) {
                $('.upload-plugin .uploadify').attr('style', '');
            }
        });
        
        $('.uploadify-queue').sortable();
        
        $('#uploadAlbumImage').change(function(){
            var me = $(this);
            var container = $(".imgUpload");
            var loader = container.find('.ajaxLoader');
            
            container.find('.placeholder').hide();
            container.find('.imgArchivoBtn').hide();
            loader.show();
            
            $.mozcuFileUpload({
                inputId: me.attr('id'),
                actionUrl: me.data('url'),
                success: function(data) {
                    if(data.success) {
                        var img = container.find('.preview');
                        //var deleteImg = me.parents('.uploadFront').find('.deleteImage');
                        img.attr('src', "/uploads/images/tmp/" + data.file_name);
                        $("#imageFileName").val(data.file_name);
                        
                        loader.hide();
                        img.show();
                        //deleteImg.show();
                        
                        if($('#imageUrl').length > 0) {
                            $('#imageUrl').remove();
                        }
                    } else {
                        container.find('.placeholder').show();
                        container.find('.imgArchivoBtn').show();
                        loader.hide(); 
                    }
                }
            });
        });
        
        $('.uploadBox .deleteImage').click(function(e) {
            var me = $(this);
            
            var img = me.parent().find('.preview');
            var text = me.parent().find('.text');
            $('#uploadAlbumImage').val('');
            $("#imageFileName").val("");
            me.hide();
            img.hide();
            text.show();
        });
    });
</script>