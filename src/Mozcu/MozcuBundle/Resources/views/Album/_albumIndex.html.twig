                    <li><a href="#">Uruguay</a></li>
                    <li><a href="#">Venezuela</a></li>
                    <li><a href="#">Zimbague</a></li>   
                </ul>
            </div>
            
            <div class="btn-group btnFilter">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Ordenar por <span class="caret"></span>
                </button>

                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Relevancia</a></li>
                    <li><a href="#">Fecha de subida</a></li>
                    <li><a href="#">Reproducciones</a></li>
                </ul>
            </div> 

        </div>
        
        <!--INICIO DE ALBUMES               -->
        {% for album in albums %}
            {{ include('MozcuMozcuBundle:Album:_album.html.twig', {album: album}) }}
        {% endfor %}
        <!--FIN DE ALBUMES-->               
        
        <a href="{{ path('MozcuMozcuBundle_albumsNextPage', {page: 1}) }}" class="albumsNextPage" style="display:none;">mas</a>
        
    </div>

</div><!--FIN DE CONTENIDO-->

<script type="text/javascript">
    $(function(){
        $('.dropdown-menu').on('click', '.form-control', function(e) { e.stopPropagation(); });
    
        function scroller() {
            $('.mainContent').jscroll({
                loadingHtml: '<span>Loading...</span>',
                padding: 50,
                autoTrigger: false,
                nextSelector: 'a.albumsNextPage:last',
                contentSelector: '.albumsPage',
                callback: function(algo) {
                    console.log('lala');
                    console.log(algo);
                }
            });
        }
        
        scroller();
    });
    
</script>