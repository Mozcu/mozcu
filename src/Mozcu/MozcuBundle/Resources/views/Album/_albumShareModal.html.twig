<div class="modal fade compartirModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
       <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                      <h4 class="modal-title ">Compartir "{{ album.getName}}" por {{ album.getArtistName }}</h4>
                </div>
                <div class="modal-body">
                    <div class="crearCompi">
                        <input type="text" class="form-control col-xs-9 col-sm-9 col-md-9 col-lg-9" value="{{ url('MozcuMozcuBundle_albumAlbum', { 'username': album.getProfile.getusername, 'slug': album.getSlug }) }}">
                        <button class="btn btn-default col-lg-2" id="copy-button" data-clipboard-text="{{ url('MozcuMozcuBundle_albumAlbum', { 'username': album.getProfile.getusername, 'slug': album.getSlug }) }}">Copiar</button>
                    </div>

                </div>
          </div>
    </div>
    <script type="text/javascript">
    var client = new ZeroClipboard( document.getElementById("copy-button") );

    client.on( "ready", function( readyEvent ) {
      // alert( "ZeroClipboard SWF is ready!" );

      client.on( "aftercopy", function( event ) {
        // `this` === `client`
        // `event.target` === the element that was clicked
        //event.target.style.display = "none";
        $('.compartirModal').modal('hide');
      } );
    } );
    </script>           
</div>