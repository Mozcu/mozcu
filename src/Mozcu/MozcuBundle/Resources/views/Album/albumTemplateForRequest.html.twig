{% extends 'MozcuMozcuBundle::layout.html.twig' %}

{% set album = parameters.album %}

{% block metadata %}
    <meta property="og:title" content="{{ album.getName }}, por {{ album.getArtistName }}">
    <meta property="og:type" content="album">
    <meta property="og:site_name" content="{{ album.getArtistName }}">
    <meta property="og:description" content="Escucha los {{ album.getSongs.count }} temas de {{ album.getName }}">
    <meta property="og:image" content="{{ album.getListThumbnailUrl }}">
    <!--<meta property="og:url" content="{{ path('MozcuMozcuBundle_albumAlbum', {'username': album.getProfile.getUsername, 'id': album.getId}) }}">-->
    <meta property="og:url" content="{{app.request.uri}}">
{% endblock %}

{% block title %} {% trans with {'%name%': album.getArtistName} %}%name% en Mozcu{% endtrans %} {% endblock %}

{% block mainContent %}
    <div class="col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10 albumPage">
        {{ include('MozcuMozcuBundle:Album:_albumHeader.html.twig', parameters) }}

        {{ include(template, parameters) }}
        
    </div>
{% endblock %}