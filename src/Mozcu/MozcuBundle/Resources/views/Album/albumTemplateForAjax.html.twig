<div class="col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10 albumPage">
    {{ render(controller('MozcuMozcuBundle:Album:loadAlbumHeader', { 'album': album, 'selected': selected })) }}
    
    {{ include(template, parameters) }}
    
    <script type="text/javascript">
        $(function() {
            window.scrollTo(0,0);
            
            $('head meta[name=description]').attr('content', '{{ album.description | e('js') }} mozcu, {{ album.getProfile.getCity }}, {{ album.getProfile.getCountry.getName }}, {% for tag in album.getTags%} {{ tag.getName() }}, {% endfor %},musica, mp3, musica gratis, descargar mÃºsica');
            if ($('head meta[name=title]').length > 0) {
                $('head meta[name=title]').attr('content', '{{ album.getName }} - {{ album.getArtistName }}');
            } else {
                var meta = $('<meta>', {name: 'title', content: '{{ album.getName }} - {{ album.getArtistName }}'});
                $('head').append(meta);
            }
            $('head title').html('{{ album.getName }} - {{ album.getArtistName }} - Mozcu');
        });
    </script>
    
    {{ include('googleAnalytics.html.twig') }}
    
</div>