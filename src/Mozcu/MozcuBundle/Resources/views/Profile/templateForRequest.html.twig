{% extends 'MozcuMozcuBundle::layout.html.twig' %}

{% block metadata %}
    <meta property="og:title" content="{{ user.getCurrentName }}">
    <meta property="og:type" content="profile">
    <meta property="og:url" content="{{ url('MozcuMozcuBundle_profile', {'username': user.getUsername} )}}">
    <meta property="og:site_name" content="{% trans with {'%name%': user.getCurrentName} %}%name% en Mozcu{% endtrans %}">
    <meta property="og:description" content="{{ user.getProfile.getSlogan }}">
    <meta property="og:image" content="
        {% if user.getProfile.getMainImage is null %}
            http://mozcudev.com.ar/images/profile_125x125.jpg
        {% else %}
            {{ user.getProfile.getProfileImageUrlForHeader }}
        {% endif %}">
{% endblock %}

{% block title %} {% trans with {'%name%': user.getCurrentName} %}%name% en Mozcu{% endtrans %} {% endblock %}

{% block mainContent %}
    {{ include('MozcuMozcuBundle:Profile:templateForAjax.html.twig', {'user': user,'selected': selectedOption, 'parameters': parameters}) }}
{% endblock %}